---
 const images = [
    {src:'certificates/hmotnost.png', title:"Hmotnosť"},
    {src:'certificates/tlak.png', title:"Tlak"},
    {src:'certificates/teplota.png', title:"Teplota"},
    {src:'certificates/dlzka.png', title:"Dĺžka"},
    {src:'certificates/elektro.png', title:"Elektro"},
    {src:'certificates/metrologia.png', title:"Metrológia"},
    {src:'certificates/osvedcenie23.png', title:"Osvedčenie"},
    {src:'certificates/zivnost.png', title:"Živnosť"}
 ]
---
<div class="flex flex-wrap w-full h-full gap-2 md:gap-5 justify-center">
{images.map(image =>(
<div id="certificate" style={{backgroundImage: `url('${image.src}')`}} class="bg-cover h-40 w-40 md:h-50 md:w-50  cursor-pointer flex group md:last:col-span-1 last:col-span-2 rounded-sm overflow-hidden" onclick={`showFullscreen('${image.src}')`}>
    <p class="self-end bg-accent text-primary font-bold w-full text-center p-4 transition-all duration-150 group-hover:p-6 select-none">{image.title}</p>
</div>
))}
</div>
<div id="fullscreen" onclick="closeFullscreen()" class="fixed left-0 right-0 top-0 z-1000 w-screen h-screen hidden rounded-sm p-20 cursor-pointer bg-black/50">
    <img id="fullscreen-img" src="" alt="Fullscreen view" class="relative max-w-full max-h-full object-contain m-auto select-none"/>
</div>


<script is:inline>
function showFullscreen(src) {
  const overlay = document.getElementById('fullscreen');
  const img = document.getElementById('fullscreen-img');
  img.src = src;
  overlay.classList.add("flex");
  overlay.classList.remove("hidden");
}

function closeFullscreen() {
    document.getElementById('fullscreen').classList.remove("flex");
    document.getElementById('fullscreen').classList.add("hidden");
}
</script>