---
import data from "../data/services.json";
---
<div class="grid grid-cols-2 md:grid-cols-5 gap-2 md:gap-5 justify-center h-fit md:h-150 relative w-full mb-10 md:mb-20">
				{data.map(item=>(
					<a href={`/services/${item.id}`} class="flex flex-col hover:scale-98 duration-100 h-full">
						<div style=`background-image: url("${item.link}")` class=" h-40 md:h-full w-full bg-center bg-cover rounded-sm"></div>
						<p class="text-sm md:text-base">{item.text}</p>
					</a>
					
				))}
</div>