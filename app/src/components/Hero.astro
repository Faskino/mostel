---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
interface Props {
	imagePath:string,

}
const { imagePath } = Astro.props;

const images = import.meta.glob<{default:ImageMetadata}>('/src/assets/images/*.webp')
---

<section class=" relative flex flex-col justify-center items-center h-screen">
  <Image src={images[imagePath]()} alt="Hero image" class="absolute inset-0 w-full h-full object-cover -z-10" />
  <div class="absolute inset-0 bg-black/50 -z-10"></div>
  <div class="relative z-10 p-8 text-white">
    <slot />
  </div>
</section>
