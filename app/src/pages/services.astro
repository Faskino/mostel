<Layout backgroundUrl="images/image.png">
    <Section height="h-screen">
        <div class="flex flex-col w-full text-center items-center justify-center h-full py-20 gap-5 overflow-hidden">
            <SectionTitle text="Kalibrujeme"></SectionTitle>
            <div class="flex flex-1 flex-col-reverse lg:flex-row gap-4 h-20 w-full">
                <div class="grid grid-cols-4 grid-rows-1 lg:grid-cols-2 lg:grid-rows-2 gap-2 h-1/3 lg:h-full w-full lg:w-1/2" id="contentButtons">
                    {items.map((item, index) => (
                    <div style=`background-image: url("${item.link}")` class="rounded-sm clickable cursor-pointer h-full w-full bg-cover flex group overflow-hidden" data-index={index} data-content={item.content}>
                        <p class="text-sm lg:text-base self-end bg-primary/50 h-full lg:h-1/4 w-full text-center p-4 transition-all duration-150 lg:group-hover:h-1/3 flex justify-center items-center">{item.text}</p>
                    </div>
                    ))}
                </div>

                <div  class="flex-1 text-sm lg:text-base p-6 bg-primary rounded-sm text-left   overflow-y-auto">
                    <ul id="displayArea" class="list-disc">
                      wiofnweiofn
                    </ul>
                </div>
            </div>
        </div>
    </Section>
</Layout>



<script is:inline>
  const buttons = document.querySelectorAll('#contentButtons .clickable');
  const displayArea = document.getElementById('displayArea');

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const text = btn.dataset.content;
      displayArea.innerHTML = text;
      
    });
  });
</script>
