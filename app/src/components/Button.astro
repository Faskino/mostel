---
const { text, href } = Astro.props;
---

<a
    href={href}
    class="text-sm md:text-base flex gap-2 justify-center items-center w-fit py-3 px-6 text-primary font-bold  bg-accent rounded-full hover:scale-95 duration-100 hover:-rotate-2 cursor-pointer"
>
    <p >{text}</p>
    <svg
        class="mt-0.5 w-3 h-3 fill-primary"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 320 512"
        ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
        <path
            d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"
        ></path></svg
    >
</a>
