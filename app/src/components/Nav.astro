---
const items = [
  { name: "Domov", href: "/" },
  { name: "Služby", href: "/services" },
  { name: "O nás", href: "/about" },
  { name: "Kontakt", href: "/contact" },
  { name: "Galéria", href: "/gallery" },
];
---

<nav>
  <div
    id="navbar"
    class="fixed text-white top-0 left-0 w-screen h-16 flex items-center justify-between px-10 md:px-20 lg:px-32 xl:px-64 z-[1000] transition-colors duration-150 backdrop-blur-xs bg-background/50"
  >
    <a class="w-30" href="/"><img src="/logo-mostel.svg" alt="" /></a>

    <div class="hidden md:flex gap-5">
      {
        items.map((item) => (
          <a href={item.href} class="hover:text-secondary transition-colors">
            {item.name}
          </a>
        ))
      }
    </div>

    <button id="menu-toggle" class="md:hidden">
      <svg
        class="w-6 h-6 cursor-pointer stroke-white/80"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <div
    id="mobile-menu"
    class="hidden fixed z-[1001] m-auto top-0 bottom-0 left-0 right-0 h-screen w-full backdrop-blur-xs p-6 md:hidden duration-200 ease-in-out bg-background/50 text-white"
  >
    <div class="p-10 bg-background w-full h-full flex flex-col">
      <div class="flex w-full justify-between mb-7">
        <a class="w-30" href="/"><img src="/logo-mostel.svg" alt="Logo" /></a>
        <button id="close-toggle" class="md:hidden cursor-pointer">
          <svg
            class="w-5 h-5 fill-white/80"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 56 56"
            ><path
              d="M 10.0234 43.0234 C 9.2266 43.8203 9.2031 45.1797 10.0234 45.9766 C 10.8438 46.7734 12.1797 46.7734 13.0000 45.9766 L 28.0000 30.9766 L 43.0000 45.9766 C 43.7969 46.7734 45.1563 46.7969 45.9766 45.9766 C 46.7734 45.1562 46.7734 43.8203 45.9766 43.0234 L 30.9531 28.0000 L 45.9766 13.0000 C 46.7734 12.2031 46.7969 10.8437 45.9766 10.0469 C 45.1328 9.2266 43.7969 9.2266 43.0000 10.0469 L 28.0000 25.0469 L 13.0000 10.0469 C 12.1797 9.2266 10.8203 9.2031 10.0234 10.0469 C 9.2266 10.8672 9.2266 12.2031 10.0234 13.0000 L 25.0234 28.0000 Z"
            ></path></svg
          >
        </button>
      </div>
      <div class="flex flex-col h-full">
        {
          items.map((item) => (
            <a
              href={item.href}
              class="hover:text-accent duration-150 transition-all h-15 flex items-center justify-between group"
            >
              {item.name}
              <svg
                class="w-3 h-3 fill-accent group-hover:right-4 relative duration-150 right-0"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 320 512"
              >
                <path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z" />
              </svg>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.getElementById("navbar");
    window.addEventListener("scroll", () => {
      if (window.scrollY > 100) {
        navbar?.classList.add("shadow-md");
      } else {
        navbar?.classList.remove("shadow-md");
      }
    });
    const toggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("mobile-menu");
    const close = document.getElementById("close-toggle");

    toggle?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
    });
    close?.addEventListener("click", ()=>{
      menu?.classList.toggle("hidden");
    })
  });
</script>
